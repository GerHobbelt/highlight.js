{
  "name": "@gerhobbelt/highlight.js",
  "description": "Syntax highlighting with language autodetection.",
  "keywords": [
    "highlight",
    "syntax"
  ],
  "homepage": "https://highlightjs.org/",
  "version": "10.0.2-19",
  "author": {
    "name": "Ivan Sagalaev",
    "email": "maniac@softwaremaniacs.org"
  },
  "contributors": [],
  "bugs": {
    "url": "https://github.com/highlightjs/highlight.js/issues"
  },
  "license": "BSD-3-Clause",
  "repository": "GerHobbelt/highlight.js",
  "main": "./lib/index.js",
  "scripts": {
    "mocha": "mocha",
    "build_and_test": "npm run build && npm run test",
    "build": "node ./tools/build.js -t node",
    "build-cdn": "node ./tools/build.js -t cdn",
    "build-browser": "node ./tools/build.js -t browser :common",
    "lint": "eslint .",
    "lintfix": "eslint --fix .",
    "prettier": "node tools/codeformat.js",
    "test": "mocha --globals document test",
    "test-markup": "mocha --globals document test/markup",
    "test-detect": "node tools/checkAutoDetect.js",
    "test-browser": "mocha --globals document test/browser",
    "pub": "cd build && npm publish --access public"
  },
  "engines": {
    "node": ">=10"
  },
  "devDependencies": {
    "bluebird": "^3.7.2",
    "clean-css": "5.1.3",
    "cli-table": "0.3.6",
    "colors": "1.4.0",
    "commander": "8.0.0",
    "del": "6.0.0",
    "dependency-resolver": "2.0.1",
    "eslint": "7.29.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-standard": "5.0.0",
    "glob": "7.1.7",
    "glob-promise": "4.2.0",
    "handlebars": "4.7.7",
    "js-beautify": "1.14.0",
    "jsdom": "16.6.0",
    "lodash": "4.17.21",
    "mocha": "9.0.1",
    "rollup": "2.52.3",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-json": "4.0.0",
    "should": "13.2.3",
    "terser": "5.7.0",
    "tiny-worker": "2.3.0"
  },
  "dependencies": {}
}
